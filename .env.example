# Telegram API настройки (обязательные)
# Получите на https://my.telegram.org/apps
API_ID=12345678
API_HASH=abcdef1234567890abcdef1234567890
PHONE=+79123456789

# Настройки групп (обязательные)
# ID или username исходной группы/канала (откуда копируем)
SOURCE_GROUP_ID=@source_group
# ID или username целевой группы/канала (куда копируем)
TARGET_GROUP_ID=@target_group

# Настройки поведения (опциональные)
# Задержка между сообщениями в секундах
DELAY_SECONDS=3
# Максимум сообщений в час
MESSAGES_PER_HOUR=30
# Режим симуляции (true/false)
DRY_RUN=false

# Дополнительные настройки (опциональные)
# Имя файла сессии (без расширения)
SESSION_NAME=telegram_copier
# Файл для сохранения прогресса
RESUME_FILE=last_message_id.txt

# Отладка
DEBUG_MESSAGE_IDS=false

# ИСПРАВЛЕНИЕ: Батчевая обработка (предотвращает проблемы с памятью после 500-600 постов)
BATCH_SIZE=100

# Настройки прокси (опциональные)
# PROXY_SERVER=proxy.example.com
# PROXY_PORT=1080
# PROXY_USERNAME=username
# PROXY_PASSWORD=password

# Авторизация для Docker (опциональные)
# Код из SMS для первичной авторизации
# TELEGRAM_CODE=
# Пароль 2FA (если включен)
# TELEGRAM_PASSWORD=
# Настройки трекинга сообщений (новые возможности)
# Включить детальный трекинг скопированных сообщений
USE_MESSAGE_TRACKER=true
# Файл для хранения информации о скопированных сообщениях
TRACKER_FILE=copied_messages.json
# Добавлять debug теги к сообщениям (нарушает чистоту копирования)
ADD_DEBUG_TAGS=false
