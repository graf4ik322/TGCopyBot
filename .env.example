# ============================================================================
# TELEGRAM API CREDENTIALS (Обязательные параметры)
# ============================================================================
# Получите на https://my.telegram.org/apps
API_ID=your_api_id_here
API_HASH=your_api_hash_here
PHONE=+1234567890

# ============================================================================
# GROUP CONFIGURATION (Обязательные параметры)
# ============================================================================
# ID или username исходной группы (откуда копировать)
SOURCE_GROUP_ID=@source_channel_or_group

# ID или username целевой группы (куда копировать)
TARGET_GROUP_ID=@target_channel_or_group

# ============================================================================
# BEHAVIOR SETTINGS (Необязательные параметры)
# ============================================================================
# Задержка между сообщениями в секундах (по умолчанию: 3)
DELAY_SECONDS=3

# Максимальное количество сообщений в час (по умолчанию: 30)
MESSAGES_PER_HOUR=30

# Режим тестирования - не отправлять сообщения, только показывать (по умолчанию: false)
DRY_RUN=false

# ============================================================================
# SESSION AND STORAGE SETTINGS (Необязательные параметры)
# ============================================================================
# Имя файла сессии (по умолчанию: telegram_copier)
SESSION_NAME=telegram_copier

# Файл для сохранения последнего обработанного сообщения (по умолчанию: last_message_id.txt)
RESUME_FILE=last_message_id.txt

# ============================================================================
# MESSAGE TRACKING SETTINGS (Необязательные параметры)
# ============================================================================
# Включить трекинг скопированных сообщений (по умолчанию: true)
USE_MESSAGE_TRACKER=true

# Файл для хранения информации о скопированных сообщениях (по умолчанию: copied_messages.json)
TRACKER_FILE=copied_messages.json

# Добавлять отладочные теги к сообщениям (по умолчанию: false)
ADD_DEBUG_TAGS=false

# ============================================================================
# ANTI-NESTING FEATURE (Необязательные параметры)
# ============================================================================
# Включить функцию "антивложенности" - упрощение структуры сообщений (по умолчанию: false)
FLATTEN_STRUCTURE=false

# ============================================================================
# PROXY SETTINGS (Необязательные параметры)
# ============================================================================
# Адрес прокси сервера (если не указан, прокси не используется)
PROXY_SERVER=

# Порт прокси сервера (по умолчанию: 1080 для SOCKS5)
PROXY_PORT=

# Имя пользователя для прокси (если требуется аутентификация)
PROXY_USERNAME=

# Пароль для прокси (если требуется аутентификация)
PROXY_PASSWORD=

# ============================================================================
# TELEGRAM AUTHORIZATION (Для Docker и автоматизированного запуска)
# ============================================================================
# Код авторизации из SMS (используется при первом запуске в Docker)
# Пример: TELEGRAM_CODE=12345
TELEGRAM_CODE=

# Пароль двухфакторной аутентификации (если включена 2FA)
# Пример: TELEGRAM_PASSWORD=your_2fa_password
TELEGRAM_PASSWORD=

# ============================================================================
# ПРИМЕРЫ ИСПОЛЬЗОВАНИЯ
# ============================================================================
# 
# Минимальная конфигурация (только обязательные параметры):
# API_ID=12345678
# API_HASH=abcdef1234567890abcdef1234567890
# PHONE=+1234567890
# SOURCE_GROUP_ID=@source_channel
# TARGET_GROUP_ID=@target_channel
#
# Полная конфигурация с настройками:
# API_ID=12345678
# API_HASH=abcdef1234567890abcdef1234567890
# PHONE=+1234567890
# SOURCE_GROUP_ID=@source_channel
# TARGET_GROUP_ID=@target_channel
# DELAY_SECONDS=5
# MESSAGES_PER_HOUR=20
# DRY_RUN=false
# USE_MESSAGE_TRACKER=true
# FLATTEN_STRUCTURE=false
# PROXY_SERVER=127.0.0.1
# PROXY_PORT=9050
# PROXY_USERNAME=user
# PROXY_PASSWORD=pass
#
# Для Docker с авторизацией:
# TELEGRAM_CODE=12345
# TELEGRAM_PASSWORD=your_2fa_password