# Telegram API Configuration
# Get these values from https://my.telegram.org/apps
API_ID=12345678
API_HASH=your_api_hash_here
PHONE=+79801234567

# Channel Configuration
# Use either numeric ID (with -100 prefix) or @username
SOURCE_GROUP_ID=-1002399927446
TARGET_GROUP_ID=-1001234567890
# Alternative: use usernames
# SOURCE_GROUP_ID=@source_channel
# TARGET_GROUP_ID=@target_channel

# Behavior Settings
DELAY_SECONDS=3
MESSAGES_PER_HOUR=30
DRY_RUN=false

# Session and Storage
SESSION_NAME=telegram_copier
RESUME_FILE=last_message_id.txt

# Message Tracking
USE_MESSAGE_TRACKER=true
TRACKER_FILE=copied_messages.json
ADD_DEBUG_TAGS=false
DEBUG_MESSAGE_IDS=false

# Structure Settings
FLATTEN_STRUCTURE=false

# Proxy Settings (optional)
# PROXY_TYPE=socks5
# PROXY_HOST=127.0.0.1
# PROXY_PORT=1080
# PROXY_USERNAME=username
# PROXY_PASSWORD=password

# Logging
LOG_LEVEL=INFO
LOG_FILE=telegram_copier.log