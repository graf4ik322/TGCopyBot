# ================================
# TELEGRAM API CONFIGURATION
# ================================
# Required: Get these from https://my.telegram.org/auth
API_ID=your_api_id_here
API_HASH=your_api_hash_here
PHONE=your_phone_number_here

# Optional: For non-interactive authorization (Docker, CI/CD)
# TELEGRAM_CODE=12345
# TELEGRAM_PASSWORD=your_2fa_password

# ================================
# GROUP CONFIGURATION
# ================================
# Required: Source and target groups for copying
SOURCE_GROUP_ID=@source_group_username_or_id
TARGET_GROUP_ID=@target_group_username_or_id

# ================================
# COPYING BEHAVIOR SETTINGS
# ================================
# Delay between copying messages (seconds)
DELAY_SECONDS=3

# Maximum messages to copy per hour
MESSAGES_PER_HOUR=30

# Enable dry run mode (true/false) - simulates copying without actual sending
DRY_RUN=false

# ================================
# SESSION AND STORAGE
# ================================
# Session file name (without .session extension)
SESSION_NAME=telegram_copier

# File to store last processed message ID
RESUME_FILE=last_message_id.txt

# ================================
# MESSAGE TRACKING
# ================================
# Enable detailed message tracking (true/false)
USE_MESSAGE_TRACKER=true

# File to store detailed message tracking data
TRACKER_FILE=copied_messages.json

# Add debug tags to copied messages (true/false)
ADD_DEBUG_TAGS=false

# Convert nested replies to flat structure (true/false)
FLATTEN_STRUCTURE=false

# ================================
# MESSAGE DELETION SETTINGS
# ================================
# Target group for deletion operations (defaults to TARGET_GROUP_ID if not set)
DELETION_TARGET_GROUP=@target_group_username_or_id

# Default message ID range for deletion
DELETION_DEFAULT_START_ID=1
DELETION_DEFAULT_END_ID=17870

# Batch processing settings
DELETION_BATCH_SIZE=100

# Rate limiting for deletion operations
DELETION_MESSAGES_PER_HOUR=6000
DELETION_DELAY_SECONDS=1

# Connection timeout for deletion operations (seconds)
DELETION_TIMEOUT_SECONDS=30

# Warning threshold for large deletion ranges
DELETION_MAX_RANGE_WARNING=50000

# Safety settings
DELETION_REQUIRE_CONFIRMATION=true
DELETION_AUTO_DRY_RUN=false

# ================================
# PROXY SETTINGS (OPTIONAL)
# ================================
# Uncomment and configure if you need proxy
# PROXY_SERVER=your_proxy_host
# PROXY_PORT=1080
# PROXY_USERNAME=your_proxy_username
# PROXY_PASSWORD=your_proxy_password

# ================================
# LOGGING AND DEBUGGING
# ================================
# Log level for application output (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ================================
# ADVANCED SETTINGS
# ================================
# These settings are for advanced users and usually don't need to be changed

# Additional session validation settings
# SESSION_VALIDATION_TIMEOUT=30

# ================================
# DOCKER AND CI/CD SETTINGS
# ================================
# For non-interactive environments (Docker, CI/CD pipelines)

# TELEGRAM_CODE: SMS code for authorization
# Use when running in Docker: docker-compose run -e TELEGRAM_CODE=12345 app
# TELEGRAM_CODE=12345

# TELEGRAM_PASSWORD: 2FA password for accounts with two-factor authentication  
# Use when running in Docker: docker-compose run -e TELEGRAM_PASSWORD=mypass app
# TELEGRAM_PASSWORD=your_2fa_password

# ================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# ================================
# You can create different .env files for different environments:
# .env.development - for development with debug logging
# .env.production - for production with minimal logging
# .env.testing - for automated testing with dry run enabled

# ================================
# QUICK SETUP EXAMPLES
# ================================
# Copy one of these example blocks and uncomment/modify as needed:

# Example 1: Basic setup
# API_ID=12345678
# API_HASH=abcdef1234567890abcdef1234567890
# PHONE=+1234567890
# SOURCE_GROUP_ID=@my_source_group
# TARGET_GROUP_ID=@my_target_group

# Example 2: High-speed deletion setup
# API_ID=12345678
# API_HASH=abcdef1234567890abcdef1234567890
# PHONE=+1234567890
# TARGET_GROUP_ID=@my_group
# DELETION_BATCH_SIZE=100
# DELETION_DELAY_SECONDS=1
# DELETION_REQUIRE_CONFIRMATION=false

# Example 3: Safe testing setup  
# API_ID=12345678
# API_HASH=abcdef1234567890abcdef1234567890
# PHONE=+1234567890
# TARGET_GROUP_ID=@my_test_group
# DRY_RUN=true
